<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Toutes les Notes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="container">
        <div class="mt-4 mb-4">
            <a href="/notes" class="btn btn-success btn-lg text-white">
                <i class="fas fa-arrow-left me-2"></i>Retour Ã  mes notes
            </a>
        </div>
        <h1>Toutes les Notes</h1>
        <div class="notes-list">
            <% if (notes && notes.length > 0) { %>
                <% notes.forEach(note => { %>
                    <div class="note-card">
                        <div class="note-header">
                            <h3><%= note.title %></h3>
                            <span class="note-author">Par: <%= note.User.email %></span>
                        </div>
                        <p><%= note.content %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <p>Aucune note disponible</p>
            <% } %>
        </div>
    </div>
</body>
</html> 